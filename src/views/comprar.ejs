<%- include('templates/header') %>
    <%- include('templates/nav') %>
<main>

    <section class="py-5 text-center container">
        <div class="row py-lg-5">
        <div class="col-lg-6 col-md-8 mx-auto">
            <h1 class="fw-light">Fin de tu compra</h1>
            
        </div>
        </div>
    </section>

    <div class="album py-5 bg-light">
        <div class="container">
            <% if(data) { %>

            <div class="page-content container">
                <div class="page-header text-blue-d2">
                    <h1 class="page-title text-secondary-d1">
                        Resumen
                        <small class="page-info">
                            <i class="fa fa-angle-double-right text-80"></i>
                            ID: <%- data[0]._id %>
                        </small>
                    </h1>
            
                </div>
            
                <div class="container px-0">
                    <div class="row mt-4">
                        <div class="col-12 col-lg-10 offset-lg-1">
                            <div class="row">
                                <div class="col-sm-6">
                                    <div>
                                        <span class="text-sm text-grey-m2 align-middle">Para:</span>
                                        <span class="text-600 text-110 text-blue align-middle"><%- data[0].email%></span>
                                    </div>
                                    
                                </div>
                                <!-- /.col -->
            
                                <div class="text-95 col-sm-6 align-self-start d-sm-flex justify-content-end">
                                    <hr class="d-sm-none" />
                                    <div class="text-grey-m2">
                                        <div class="mt-1 mb-2 text-secondary-m1 text-600 text-125">
                                            Factura
                                        </div>
            
                                        <div class="my-2"><i class="fa fa-circle text-blue-m2 text-xs mr-1"></i> <span class="text-600 text-90">Orden número:</span> <%- data[0].numeroOrden%></div>
            
                                        <div class="my-2"><i class="fa fa-circle text-blue-m2 text-xs mr-1"></i> <span class="text-600 text-90">Fecha:</span> <%- data[0].fecha %></div>
            
                                        <div class="my-2"><i class="fa fa-circle text-blue-m2 text-xs mr-1"></i> <span class="text-600 text-90">Estado:</span> 
                                            <span class="badge bg-warning text-dark"><%- data[0].estado %></span>
                                        </div>
                                    </div>
                                </div>
                                <!-- /.col -->
                            </div>
            
                            <div class="mt-4">
                                <div class="row text-600 text-white bgc-default-tp1 py-25">
                                    <div class="col-9 col-sm-5">Nombre y Descripción</div>
                                    <div class="d-none d-sm-block col-4 col-sm-2">Cantidad</div>
                                    <div class="d-none d-sm-block col-sm-2">Precio unidad</div>
                                    <div class="col-2">Precio</div>
                                </div>
                                <div class="text-95 text-secondary-d3">
                                    <% const items = JSON.parse(data[0].items) %>

                                    <div class="row mb-2 mb-sm-0 py-25">
                                        <div class="col-9 col-sm-5"><%- items.nombre %> <%- items.descripcion %></div>
                                        <div class="d-none d-sm-block col-2"><%- data[0].cantidad %></div>
                                        <div class="d-none d-sm-block col-2 text-95"><%- items.precio %></div>
                                        <div class="col-2 text-secondary-d2"><%- items.precio %></div>
                                    </div>
                                </div>
            
                                <div class="row border-b-2 brc-default-l2"></div>
            
            
                                <div class="row mt-3">
                                    <div class="col-12 col-sm-7 text-grey-d2 text-95 mt-2 mt-lg-0">
                                    </div>
            
                                    <div class="col-12 col-sm-5 text-grey text-90 order-first order-sm-last">
                                        <div class="row my-2">
                                            <div class="col-7 text-right">
                                                SubTotal
                                            </div>
                                            <div class="col-5">
                                                <span class="text-120 text-secondary-d1"><%- items.precio%></span>
                                            </div>
                                        </div>
            
            
                                        <div class="row my-2 align-items-center bgc-primary-l3 p-2">
                                            <div class="col-7 text-right">
                                                Total
                                            </div>
                                            <div class="col-5">
                                                <span class="text-150 text-success-d3 opacity-2">
                                                    <%- parseInt(items.precio) * parseInt(data[0].cantidad) %>
                                                </span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
            
                                <hr />
            
                                <div>
                                    <span class="text-secondary-d1 text-105">Gracias por su compra </span>
                                    <a href="/" style="float: right">Volver a la tienda</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <% } else { %>
                No hay factura disponible
            <% } %>
        </div>
    </div>

    </main>
    <%- include('templates/footer') %></main>